<div class="booyah-box col-10 offset-1">
<div class="hb"></div>
<h1 class = 'places_title'><%= @place.name %></h1>
<div class="hb"></div>
<i><%= @place.address %></i>
<div class="hb"></div>
<p><%= @place.description %></p>
<div class="hb"></div>
<% if @place.latitude.present? && @place.longitude.present? %>
<script>
  function initMap() {
    var myLatLng = {lat: <%=@place.latitude %>, lng: <%=@place.longitude %>};
  
    var map = new google.maps.Map(document.getElementById('map'), {
      zoom: 12,
      center: myLatLng
    });
  
    var marker = new google.maps.Marker({
      position: myLatLng,
      map: map,
      title: 'Hello World!'
    });
  }
</script>
<script async defer
  src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GEOCODER_API_KEY'] %>&callback=initMap"></script>
<div id="map"></div>
<%end%>
<% if current_user && current_user == @place.user %>
<small> Posted by YOU! Thanks, <%= @place.user.email %>!</small>
<%end%>
<div class= "container-fluid">
<div class="row align-items-center">
  <% if current_user && current_user == @place.user %>
  <hr />
  <div class="col-sm-1 offset-sm-10 col-6"><%= link_to 'Edit Place', edit_place_path(@place), class: 'btn btn-primary btn-block' %> </div>
  <div class= "col-sm-1 col-6"><%= link_to 'Delete Place', place_path(@place), method: :delete, data: {confirm: 'Are you sure you want to delete this?'},class: 'btn btn-danger button_things' %></div>
  <%end%>
</div>
<hr/>

<!-- Modal for  pictures -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">×</span>
        </button>
        <h4 class="modal-title" id="myModalLabel">Add a photo and a caption!</h4>
      </div>
      <div class= "modal-body">
      <%= simple_form_for @photo, url: place_photos_path(@place) do |f| %>
      <%= f.input :picture %>
      <%= f.input :caption %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= f.submit "Add a Picture", class: 'btn btn-primary' %>
      </div>
      <% end %>   
    </div>
  </div>
</div>
<br/>
<div>
   <!-- Button trigger modal -->
  <button type="button" class="btn btn-primary btn-lg float-right" data-toggle="modal" data-target="#myModal">
  Add a photo
  </button>
  <h1 class> Photos</h1>
 </div>
 <hr/>
<br/>

<div class= "row">
  <% @place.photos.each do |photo| %>
    <div class="col-sm-3">
      <div class="thumbnail">
        <img class='photo_size' src='<%=photo.picture %>' />
        <div><%= photo.caption %></div>
        <div><small>Posted by:<%= photo.user.email %></small> </div>
        <% if current_user && current_user == photo.user %>
        <%=link_to 'Delete photo', place_photo_path(@place, photo), method: :delete, data: {confirm: 'Are you sure you want to delete this?'},class: 'btn btn-danger photo_delete' %>
        <%end%>
      </div>
    </div>
    <% end %>
</div>




<hr/>
<div class= "clear">
  <div class= "clear"></div>
  <!-- Modal -->
  <div class="modal fade" id="comment_dialog" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">×</span>
          </button>
          <h4 class="modal-title" id="myModalLabel">Add a comment</h4>
        </div>
        <%= simple_form_for @comment, url: place_comments_path(@place) do |f| %>
        <div class="modal-body">
          <%= f.input :message %>
          <%= f.input :rating, as: :select, collection: Comment::RATINGS %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%= f.submit "Add a Comment", class: 'btn btn-primary' %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  <br/>
  <div>
<!-- Button trigger modal -->
    <button type="button" class="btn btn-primary btn-lg float-right" data-toggle="modal" data-target="#comment_dialog">
    Add a comment
    </button>
    <h1 class>Comments</h1>
    
  </div>
  <div class="clear"></div>
  <hr/>
  <div class="row">
    <% @place.comments.each do |comment| %>
    <div class="col-12 col-sm-6">
      <blockquote>
        <div class="row">
          <div class= "col-10">
            <% if comment.humanized_rating.present?%>
            <div><b><%= comment.humanized_rating %></b></div>
            <%end%>
            <div><%= comment.message %></div>
            <div><small>Amazing reviews brought to you by <%= comment.user.email %></small> </div>
          </div>
          <% if current_user && current_user == comment.user %>
          <div class= "col-2 offset-10"><%= link_to 'Destroy', place_comment_path(@place, comment), method: :delete, data: {confirm: 'Are you sure you want to delete this?'},class: 'btn btn-danger btn-block' %></div>
          <%end%>
        </div>
      </blockquote>
    </div>
    <% end %>
  </div>
</div>