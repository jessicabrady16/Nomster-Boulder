<div class="booyah-box col-10 offset-1">
  <div class="row">
    <div class="col-3 user_av_col">
      <%= image_tag 'user_icon.png' %>
    </div>
    <div class="col-12 col-sm-7 offset-sm-2">
      <h1 class= "dash_title">Your Dashboard</h1>
      <br/>
      <h2 class= "dash_sec"> <%= @user.email %></h2>
      <br/>
      <h3><u>Member Since:</u> <%= @user.created_at.strftime("%B %d, %Y") %></h3>
      <br/>
      <h3> You have contributed <u> <%= @comment_count %> </u> <%= if @comment_count == 1 then 'comment' else 'comments' end %> to help other Nomster users with a total of <u><%= @user_5_star %></u> <%= if @user_5_star == 1 then 'five-star review!' else 'five-star reviews!' end %>
            <h3>
            </div>
          </div>
          <div class= "clear"></div>
        </div>
        <br/>
       <div class="booyah-box col-10 offset-1">
          <br/>
          <h1 class="text-center dash_title">My Comments</h1>
          <br/>
          <br/>
          <div class ="row">
            <% @user.comments.each do |comment| %>
              <div class="col-12 col-sm-6">
              <div class="booyah-box col-10 offset-1">
                <h2 class="text-center places_title"><u><%= link_to comment.place.name, place_path(comment.place) %></u> </h2>
                <blockquote>
                  <% if comment.humanized_rating.present? %>
                    <b><%= comment.humanized_rating %></b> -
                  <% end %>
                  <%= comment.message %>
                  <small><%= comment.user.email %></small>
                </blockquote>
              </div>
              </div>
            <%end%>
          </div>
        </div>
        <br/>
        <div class="clear"></div>
        <div class="booyah-box col-10 offset-1">
          <h2 class="text-center dash_title">My Places</h2>
          <% @user.places.each do |place| %>
            <div class="booyah-box col-10 offset-1">
              <h1><%= link_to place.name, place_path(place) %></h1>
              <br />
              <i><%= place.address %></i><br />
              <p><%= place.description %></p>
              <br />
            </div>
          <%end%>
        </div>
      </div>
